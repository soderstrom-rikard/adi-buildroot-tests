    while 1 {
        expect {
            -re "TUV|UVF|TU|UV|VF|(Hardware Trace:)|dma" {
                incr count_under_run
                expect {
                    -re $kernel_prompt {
                        case_pass $case_num
                        break
                    }
                    timeout {
                        case_fail $case_num
                    }
                }
            }
            -re "$channel \.\.\..*$kernel_prompt" {
                case_pass $case_num
                break
            }
            timeout {
                case_fail $case_num
