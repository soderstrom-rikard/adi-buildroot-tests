#!/usr/bin/expect

source  ../common/kernel_config.exp
source ../common/board_info.exp

log_file [log_file_name "$argv0"]

send_user "Starting $argv0\n"

set TITLE [title "$argv0"]

step "Spawn kermit"
source ../common/spawn_kermit.exp

step "Reboot the kernel."
# To add following line here to indicate that if the bootargs is different,
# it could be set here. If the bootargs value is 0, it needn't be stated, 
# for it is the default value.
# set bootargs 	$bootargs_param0   
source ../common/reboot_kernel.exp 

step "Start testing."

set timeout 5

set case_num 0
incr case_num

set timeout 5

send -s  "dmesg\r" 
while 1 {
    expect {
        -re "Processor Speed: (.*) MHz core clock.* (.*) MHz S" {         
            set core_clock $expect_out(1,string)
            set system_clock $expect_out(2,string)
            expect  -re "$kernel_prompt"
            send_log "\nProcessor Speed: $core_clock, System Clock $system_clock .\n"
            case_pass $case_num
            break
        }
        timeout {
            case_fail $case_num
        }
    }
}

incr case_num
send_user "\rCheck if core_clock is in the right range\r"
if { $board_type == "BF518F-EZBRD" || $board_type == "BF526-EZBRD" } {
    if { $core_clock < 400   && $system_clock < 80 } {
        case_pass $case_num
    } else {
        case_fail $case_num
    } 
} else {
    if { $core_clock <= 480   && $system_clock < 100 } {
        case_pass $case_num
    } else {
        case_fail $case_num
    }
}

all_pass
send_user "Ending $argv0\n"
log_file
