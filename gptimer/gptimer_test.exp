#!/usr/bin/expect

source ../kernel_config.exp
source ../board_info.exp
log_file [log_file_name "$argv0"]
send_user "Starting $argv0\n"
set TITLE [title "$argv0"]

step "Start kermit."
source ../spawn_kermit.exp

step "Reboot the kernel."
set bootargs  $bootargs_param11
source ../reboot_kernel.exp

step "Starting test"
set timeout 8

set case_num 0

incr case_num

send -s "cd /bin\r"
while 1 {
   expect {
      "root:/bin>" {
            break
      }

      timeout {
         break
         }
     }
}

expect "root:/bin>"
send -s "./simple_timer_test -m 5 -b 609\r"
while 1 {
   expect {
     -re "root:/bin" {
                case_pass $case_num
                break
      }

     -re "Hardware Trace" {
         case_fail $case_num
         break
      }

      timeout {
                case_fail $case_num
                exit
      }
      }
}
set timeout 30
send -s "cat /proc/bfin_simple_timer\r"
while 1 {
expect {
       -re  "sclk = (\[0-9]+).*\r\n" {
                set SCLK $expect_out(1,string)
                send_log "\nSCLK is $SCLK !\n"
       }

       -re  "timer  0 isr count: (\[0-9]+)\r\n" {
                set ISR0 $expect_out(1,string)
                send_log "\nISR0 is $ISR0 !\n"
       }

       -re  "timer  1 isr count: (\[0-9]+)\r\n" {
                set ISR1 $expect_out(1,string)
                send_log "\nISR1 is $ISR1 !\n"
       }

        -re "root:/bin" {
                break
       }

       timeout {
                case_fail $case_num
                exit
       }
}
}
if { [ expr $SCLK/10000000.0*5 - $ISR0 ] >= 0 &&  [ expr $SCLK/10000000.0*5 - $ISR0 ] < 10 } {
    send_user "\n"
    send_user "\n$TITLE ............\[PASS\]\n"
} else {
    send_user "\n"
    case_fail $case_num
}

send_user "Ending $argv0\n"
log_file




