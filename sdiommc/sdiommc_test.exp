        timeout {
            case_fail $case_num
        }
    }
}
incr case_num
set timeout 5
send "mdev -s\r"
while 1 {
    expect {
        -re "$kernel_prompt" {
            case_pass $case_num
            break
        }
        timeout {
            case_fail $case_num
        }
    }
}

incr case_num
set timeout 5
send "ls /dev/$mmc_dev*\r"
while 1 {
    expect {
        -re "$mmc_dev.*$mmc_dev1.*$mmc_dev2.*$kernel_prompt" {
            case_pass $case_num
            break
        }
        timeout {
            case_fail $case_num
        }
    }
}

source ../common/reboot_kernel.exp
sleep 10

send "mkdir /mnt/mmc1\r"
send "mkdir /mnt/mmc2\r"
expect -re $kernel_prompt

incr case_num
set timeout 5
