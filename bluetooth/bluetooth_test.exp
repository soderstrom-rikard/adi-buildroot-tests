#!/usr/bin/expect
#
# bluetooth test
#
# Usage:
#   ./bluetooth_test.exp board_type
#
# Example:
#   ./bluetooth_test.exp BEAGLE
#

source ../common/kernel_config.exp
log_file [log_file_name "$argv0"]
send_user "Starting $argv0\n"
set TITLE [title "$argv0"]

step "Start kermit"
source ../common/spawn_kermit.exp

step "Boot kernel"
source ../common/kernel_boot.exp

step "Start testing"
sleep 5
set case_num 0
set timeout 10
set SLV_BD_ADDR "00:15:83:44:C2:E7"

send "hciconfig hci0 up\r"
expect -re $kernel_prompt

sleep 2
set timeout 5
incr case_num
send "hciconfig\r"
while 1 {
    expect {
        -re "DOWN" {
            case_fail $case_num
        }
        -re "BD Address.*$kernel_prompt" {
            case_pass $case_num
            break
        }
        -re "not found" {
            case_fail $case_num
        }
        timeout {
            send_user "hci0 not up\r"
            case_fail $case_num
        }
    }
}

sleep 2
set timeout 20
incr case_num
send "hcitool scan\r"
while 1 {
    expect {
        -re "Inquiry failed: Success" {
            case_fail $case_num
        }
        -re "$SLV_BD_ADDR.*$kernel_prompt" {
            case_pass $case_num
            break
        }
        -re "not found" {
            case_fail $case_num
        }
        timeout {
            send_user "timeout: scan device\r"
            case_fail $case_num
        }
    }
}

sleep 2
set timeout 30
incr case_num
send "hcitool -i hci0 info $SLV_BD_ADDR\r"
while 1 {
    expect {
        -re "BD Address.*$SLV_BD_ADDR.*$kernel_prompt" {
            case_pass $case_num
            break
        }
        -re "not found" {
            case_fail $case_num
        }
        timeout {
            send_user "timeout: get info\r"
            case_fail $case_num
        }
    }
}

sleep 2
set timeout 30
incr case_num
send "l2ping -c 100 -i hci0 -f $SLV_BD_ADDR\r"
while 1 {
    expect {
        -re "100 sent, 100 received, 0% loss\r\n$kernel_prompt" {
            case_pass $case_num
            break
        }
        -re "Can't connect:" {
            case_fail $case_num
        }
        -re "not found" {
            case_fail $case_num
        }
        timeout {
            send_user "timeout: ping bluetooth device\r"
            case_fail $case_num
        }
    }
}

all_pass
send_user "Ending $argv0\n"
log_file
